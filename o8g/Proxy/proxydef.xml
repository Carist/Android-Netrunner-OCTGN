         <textblocks>
            <link block="name" separator=" ">
               <property name="Name"  />
            </link>
            <link block="cost" separator=" ">
               <property name="Cost"  />
            </link>
            <link block="keywords" separator=" ">
               <property name="Keywords"  />
            </link>
            <link block="rules" separator=" ">
               <property name="Rules"  />
            </link>
         </textblocks>
      </template>
